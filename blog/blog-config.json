  "cardTemplate": {
    "comment": "<!-- n8n:AUTO - {businessName} - {date} -->",
    "structure": "<article class=\"blog-card\">\n  <a href=\"{articleUrl}\" class=\"blog-card-image\">\n    <img src=\"{imageUrl}\" alt=\"{imageAlt}\">\n    <span class=\"blog-category-badge\">{categoryName}</span>\n  </a>\n  <div class=\"blog-card-content\">\n    <h3 class=\"blog-card-title\">\n      <a href=\"{articleUrl}\">{title}</a>\n    </h3>\n    <div class=\"blog-meta\">\n      <span class=\"blog-reading-time\">\n        <svg width=\"14\" height=\"14\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"2\">\n          <circle cx=\"12\" cy=\"12\" r=\"10\"/>\n          <polyline points=\"12 6 12 12 16 14\"/>\n        </svg>\n        {readingTime} min\n      </span>\n    </div>\n    <p class=\"blog-card-excerpt\">{excerpt}</p>\n    <a href=\"{articleUrl}\" class=\"btn btn-outline\">Leer articulo completo</a>\n  </div>\n</article>"
